{
    "name": "Airforms",
    "description": "Database form builder",
    "website": "http://airforms.com",
    "logo": "https://airforms.com/favicon.png",
    "keywords": [
        "airforms", "database", "forms"
    ],
    "success_url": "/",
    "website": "https://airforms.com",
    "repository": "https://github.com/Airforms/heroku",
    "formation": {
        "web": {
            "quantity": 1
        }
    },
    "stack": "container",
    "addons": [
        {
            "plan": "heroku-postgresql:hobby-dev"
        }
    ],
    "env": {
        "AIRFORMS_ACCOUNT_ID": {
            "description": "Airforms Account Id"
        },
        "AIRFORMS_ACCOUNT_TOKEN": {
            "description": "Airforms Account Token"
        },
        "AIRFORMS_ENCRYPTION_KEY": {
            "description": "Airforms Encryption Key"
        },
        "AIRFORMS_TOKEN_SECRET": {
            "description": "Airforms Token Secret"
        }
    }
}
